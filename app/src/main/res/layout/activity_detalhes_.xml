<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ivImagemDetalhe"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#ffbdbdbd"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <TextView
            android:text="@string/tv_nomeDetalhe"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="#232F34"
            android:layout_marginTop="23dp"
            android:id="@+id/tv_nomeDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/tv_idDetalhe"
            android:textColor="#232F34"
            android:id="@+id/tv_idDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>
        <TextView
            android:text="@string/tv_categoriaDetalhe"
            android:id="@+id/tv_categoriaDetalhe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#232F34"
            android:layout_marginVertical="24dp"/>
        <TextView
            android:text="@string/tv_Ingredientes"
            android:id="@+id/tv_Ingredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#232F34"
            android:layout_marginBottom="14dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:text="@string/tv_InstructionsDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#232F34"
            android:layout_marginBottom="14dp" />
        <TextView
            android:id="@+id/tv_InstructionsDetalhes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textColor="#232F34"
            android:layout_marginBottom="30dp" />

    </LinearLayout>
</LinearLayout>

</ScrollView>